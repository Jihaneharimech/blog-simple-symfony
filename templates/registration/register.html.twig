{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

 {% block content %}
   <div class="row">
    <div class="col-6 mx-auto">
        <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name, {
            label: 'Nom',
            attr: {
                class: 'form-control'
            }
        }) }}

        {{ form_row(registrationForm.email, {
            label: 'Adresse Email',
            attr: {
                class: 'form-control'
            }
        }) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe',
            attr: {
                class: 'form-control'
            }
        }) }}

        <div class="form-check">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {
                label_attr: { class: 'form-check-label' }
            }) }}
        </div>

        <button type="submit" class="btn btn-lg btn-primary btn-block">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
</div>



{% endblock %}
