{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel article{% endblock %}


 {% block content %}
                  
    <div class="container">
    <h1 class="text-center my-4">Créer un nouvel article</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_row(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'article'}}) }}
            </div>

            <div class="form-group">
                {{ form_row(form.contenu, {'attr': {'class': 'form-control', 'placeholder': 'Contenu de l\'article'}}) }}
            </div>

            <div class="mt-3"> <!-- Ajoutez cette ligne pour un espace entre le contenu et le bouton -->
                <button type="submit" class="btn btn-sm btn-primary">Créer l'article</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>



{% endblock %}
