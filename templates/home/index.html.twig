{% extends 'base.html.twig' %}

{% block title %} Liste d'articles{% endblock %}

 {% block content %}

<div class="container">
    <h1 class="text-center my-4">Liste des Articles</h1>
</div>

<div class="container">
    {% for article in articles %}
    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            {{ article.titre }}
            <a href="#" class="btn btn-secondary">
                <i class="bi bi-chat-dots"></i> Ajouter un commentaire
            </a>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ article.titre }}</h5>
            <p class="card-text">{{ article.contenu }}</p>
        </div>
        <div class="card-footer">
            <small class="text-muted">Publi√© le {{ article.datePublication|date('d/m/Y') }}</small>
        </div>
    </div>
    {% endfor %}
</div>



{% endblock %}
